@model ViewModels.DeleteCourseViewModel

@{
    ViewData["Title"] = "Delete";
}


<div style="text-align:left">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="card" style="width: 30rem;">
        @{var base65 = Convert.ToBase64String(@Model.Image);
            var imgSrcc = String.Format("data:image/gif;base64,{0}", base65); }
        <img class="card-img-top img-thumbnail " src="@imgSrcc">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Max count participants: </b> @Model.MaxCountParticipants</li>
            <li class="list-group-item"><b>Start date: </b>@Model.StartDate</li>
            <li class="list-group-item"><b>Duration Of days: </b>@Model.DurationOfDays</li>
            <li class="list-group-item"><b>Count Of hours: </b>@Model.CountOfHours</li>
            <li class="list-group-item"><b>Status: </b>@Model.Status</li>
            <li class="list-group-item"><b>Category: </b>@Model.Category</li>
        </ul>
        <div class="card-body">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index"></a>
            </form>
        </div>
    </div>
</div>
