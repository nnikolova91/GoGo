@model ViewModels.EditCourseViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Image"></label>
                <input asp-for="@Model.Image" type="file" onchange="readURL(this);" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <img id="blah" src="#" alt="your image" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" type="text" class="form-control" rows="6" cols="50" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCountParticipants" class="control-label"></label>
                <input asp-for="MaxCountParticipants" class="form-control" />
                <span asp-validation-for="MaxCountParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationOfDays" class="control-label"></label>
                <input asp-for="DurationOfDays" class="form-control" />
                <span asp-validation-for="DurationOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountOfHours" class="control-label"></label>
                <input asp-for="CountOfHours" class="form-control" />
                <span asp-validation-for="CountOfHours" class="text-danger"></span>
            </div>
            <div class="text-center">
                <label asp-for="Status"><b>Status</b></label>
                <div>
                    <h5>Theoretical <input type="radio" asp-for="Status" value="Theoretical" /></h5>
                    <h5>Practically <input type="radio" asp-for="Status" value="Practically" /></h5>
                </div>
            </div>
            <div class="text-center">
                <label asp-for="Category"><b>Category</b></label>
                <div>
                    <h5>Skiing <input type="radio" asp-for="Category" value="Skiing" /></h5>
                    <h5>Climbing <input type="radio" asp-for="Category" value="Climbing" /></h5>
                    <h5>Cycling <input type="radio" asp-for="Category" value="Cycling" /></h5>
                    <h5>Other <input type="radio" asp-for="Category" value="Other" /></h5>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
