@model System.Collections.Generic.List<ViewModels.DestViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<img id="img" alt="" src="data:image/jpg;base64, @ViewData["pic"]" />

<div class="jumbotron grad">
    <h1 class="display-4 purple">Hello, friends!</h1>
    <p class="lead purple">
        <b>
            Welcome to our small application for very beautiful places.
            If you consider yourself as adventurous type of person, then you are on the right place!
        </b>
    </p>
    <hr class="my-4 purple">
    <p style="color:mediumpurple">Are you ready for a New exciting expirience? GoGo</p>
</div>


<div class="card-deck">

    <div class="card" style="width: 30rem;">
        @{ var base64 = Convert.ToBase64String(Model[0].Image);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }
        <img class="card-img-top img-thumbnail " src="@imgSrc">
        <div class="card-body">
            <h5 class="card-title">@Model[0].Naame</h5>
            <p class="card-text">@Model[0].Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Level: @Model[0].Level</li>
            <li class="list-group-item">End date to join: @Model[0].EndDateToJoin</li>
            <li class="list-group-item">Start date: @Model[0].StartDate</li>
            <li class="list-group-item">End date: @Model[0].EndDate</li>
        </ul>
    </div>


    <div class="card" style="width: 30rem;">
        @{ var base65 = Convert.ToBase64String(@Model[1].Image);
            var imgSrcc = String.Format("data:image/gif;base64,{0}", base65);
        }
        <img class="card-img-top img-thumbnail " src="@imgSrcc">
        <div class="card-body">
            <h5 class="card-title">@Model[1].Naame</h5>
            <p class="card-text">@Model[1].Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Level: @Model[1].Level</li>
            <li class="list-group-item">End date to join: @Model[1].EndDateToJoin</li>
            <li class="list-group-item">Start date: @Model[1].StartDate</li>
            <li class="list-group-item">End date: @Model[1].EndDate</li>
        </ul>
    </div>


    <div class="card" style="width: 30rem;">
        @{ var base66 = Convert.ToBase64String(@Model[2].Image);
            var imgSrccc = String.Format("data:image/gif;base64,{0}", base66);
        }
        <img class="card-img-top img-thumbnail " src="@imgSrccc">
        <div class="card-body">
            <h5 class="card-title">@Model[2].Naame</h5>
            <p class="card-text">@Model[2].Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Level: @Model[2].Level</li>
            <li class="list-group-item">End date to join: @Model[2].EndDateToJoin</li>
            <li class="list-group-item">Start date: @Model[2].StartDate</li>
            <li class="list-group-item">End date: @Model[2].EndDate</li>
        </ul>
    </div>

</div>


