    <form class="mx-auto half-width wiy" method="post" asp-controller="Games" asp-action="AddLevels" enctype="multipart/form-data">


        @{ int count = 1;

            foreach (var item in Model)
            {
            <div class="row">
                <div class="row sm-9 ">
                    <div class="inline col-sm-1  ">
                        <h4><b>Level @count</b></h4>
                    </div>
                    @{await Html.RenderPartialAsync("_LevelsPartial", @item);}
                </div>
            </div>

                count++;
                }
        }

        <hr class="chushka-bg-color height: 7px" />
        <div class="text-center">
            <button type="submit" asp-controller="Games" asp-action="AddLevels">CreateGame</button>
        </div>
    </form>

