@model System.Collections.Generic.IEnumerable<ViewModels.GameViewModel>

@if (Model == null)
{
    <h1></h1>
}
else
{
    @foreach (var game in Model)
    {
        var base64 = Convert.ToBase64String(game.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        <div class="card" style="width: 30rem;">
            <img class="card-img-top img-thumbnail " src="@imgSrc">
            <div class="card-body">
                <h6 class="card-title">@game.Name</h6>
                <p class="card-text"> @game.Description</p>
            </div>
            <ul class="list-group list-group-flush">

                <li class="list-group-item">
                    <a asp-action="Details" asp-controller="Games" asp-route-id="@game.Id">
                        <btn class="btn btn-default" style="color:cornflowerblue;">Details</btn>
                    </a>
                </li>
            </ul>
        </div>
    }
}


