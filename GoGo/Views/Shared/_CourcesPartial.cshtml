@model System.Collections.Generic.IEnumerable<GoGo.ViewModels.CourceViewModel>

@if (Model == null)
{
<h1></h1>
}
else
{

@foreach (var cource in Model)
    {

    var base64 = Convert.ToBase64String(@cource.Image);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

<a asp-action="Details" asp-controller="Cources" asp-route-id="@cource.Id">
    @*<div class="inline">*@
    <btn>Details</btn>
    <img src="@imgSrc" />
    @*</div>*@
</a>
    }

}
