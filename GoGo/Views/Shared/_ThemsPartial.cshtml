@model System.Collections.Generic.IEnumerable<ViewModels.ThemDetailsViewModel>

@if (Model == null)
{
    <h1></h1>
}
else
{

    @foreach (var item in Model.OrderByDescending(x => x.Date))
    {
        <div class="card" style="text-align:left">
            <p class="card-header">
                Author: @item.Author ________
                <a style="text-align:end !important" class="card-title">@item.Date</a>
            </p>
            <div class="card-body">
                <p class="card-title">@item.Description</p>
                <form style="text-align:left !important" asp-action="Details" asp-controller="Thems" asp-route-themId="@item.Id">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <div>
                            <button class="btn btn-primary">Read more</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    }
}
