@model System.Collections.Generic.IEnumerable<ViewModels.StoryViewModel>

@if (Model == null)
{
    <h1></h1>
}
else
{

    @foreach (var item in Model)
    {
        <div class="card">
            <h5 class="card-header">@item.Title</h5>
            <div class="card-body">
                <a class="card-title">Author: @item.Author</a>
                <p class="card-title">@item.PeopleWhosLikeThis peole like this</p>
                <p class="card-text">@item.Content</p>
                <form style="text-align:center !important">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <button  asp-action="LikeFromAll" asp-controller="Stories" asp-route-id="@item.Id"  class="btn btn-primary">Like</button>
                        
                    }
                </form>
            </div>
        </div>
    }
}
