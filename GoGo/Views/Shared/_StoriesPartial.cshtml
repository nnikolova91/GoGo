@model System.Collections.Generic.IEnumerable<ViewModels.StoryViewModel>

@if (Model == null)
{
<h1></h1>
}
else
{

@foreach (var item in Model)
    {
        <div style="margin-left:300px; margin-right:300px;">
            <h4> @item.Title</h4>
            <h6>------------------------------------------------------------------------------------------</h6>
            <h5> @item.Content</h5>
            <h6>Author: @item.Author</h6>
            <h5>@item.PeopleWhosLikeThis peole like this</h5>
        </div>
    }
}
