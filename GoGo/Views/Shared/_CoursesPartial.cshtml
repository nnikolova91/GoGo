@model System.Collections.Generic.IEnumerable<ViewModels.CourseViewModel>

@if (Model == null)
{
    <h1></h1>
}
else
{
    <div class="card-deck">
        @foreach (var course in Model)
        {
            var base64 = Convert.ToBase64String(course.Image);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <div class="card" style="width: 30rem;">
                <img class="card-img-top img-thumbnail " src="@imgSrc">
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">Start date: @course.StartDate</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Max count participants: @course.MaxCountParticipants</li>
                    <li class="list-group-item">Status: @course.Status</li>
                    <li class="list-group-item">
                        <a asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id">
                            <btn class="btn" style="padding-left:400px;">Details</btn>
                        </a>
                    </li>
                </ul>
            </div>
        }
    </div>
}
