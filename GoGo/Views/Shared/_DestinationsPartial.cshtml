@model System.Collections.Generic.IEnumerable<ViewModels.DestViewModel>

@if (Model == null)
{
    <h1></h1>
}
else
{
    @foreach (var destination in Model)
    {
        var base64 = Convert.ToBase64String(@destination.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

        <div class="card-deck">
            <div class="card">
                <img class="card-img-top img-fluid" src="@imgSrc" alt="Card image cap">
                <div class="card-body" style="text-align:left">
                    <h5 class="card-title">@destination.Naame</h5>
                    <p class="card-text">@destination.Description</p>
                    <p style="text-align:left">
                        <a><b>Level: @destination.Level</b></a>
                        <a asp-action="Details" asp-controller="Destinations" asp-route-id="@destination.Id">
                            <btn class="btn" style="padding-left:10px;">Details</btn>
                        </a>
                        <a style="padding-left:10px;"><b>End date to join: @destination.EndDateToJoin</b></a>
                        <a style="padding-left:10px;"><b>Start date: @destination.StartDate</b></a>
                    </p>
                </div>
            </div>
        </div>
    }
}
