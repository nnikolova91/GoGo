
@using Microsoft.AspNetCore.Identity
@model ViewModels.StoryViewModel
@inject UserManager<GoUser> UserManager
@{
    ViewData["Title"] = "Create";
}

<main class="mt-3">

    
    <h6>------------------------------------------------------------------------------------------</h6>
    <div style="margin-left:300px; margin-right:300px;">
        <h4> @Model.Title</h4>
        <h6>------------------------------------------------------------------------------------------</h6>
        <h5> @Model.Content</h5>
        <h6>Author: @Model.Author</h6>
        <h5>@Model.PeopleWhosLikeThis peole like this</h5>
    </div>

        <h6>------------------------------------------------------------------------------------------</h6>
        
    <hr />
    <form>
        <div class="text-center">
            <button asp-action="Details" asp-controller="Destinations" asp-route-id="@Model.DestinationId" class="btn chushka-bg-color text-center">Go to destination</button>
            <h6>-------------------------------------------------------------------------------------------</h6>
        </div>

        @if (this.User.Identity.IsAuthenticated)
        {
            <div class="text-center">
                <button asp-action="Like" asp-controller="Stories" asp-route-id="@Model.Id" class="btn chushka-bg-color text-center">Like</button>
                <h6>-------------------------------------------------------------------------------------------</h6>
            </div>
        }
    </form>

</main>