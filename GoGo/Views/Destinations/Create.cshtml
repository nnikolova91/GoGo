@model ViewModels.CreateDestinationViewModel
@{
    ViewData["Title"] = "Create";
}

<main class="mt-3">
    <h1 class="text-center">Create Destination</h1>
    <hr class="wiy chushka-bg-color height: 7px" />
    <form class="mx-auto half-width wiy" method="post" asp-controller="Destinations" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="Naame"><b>Name</b></label>
                <input asp-for="Naame" type="text" class="form-control" placeholder="Name...">
                <span asp-validation-for="Naame" class="text-danger"></span>
            </div>
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="StartDate"><b>Start Date</b></label>
                <input asp-for="StartDate" type="date" class="form-control" placeholder="Start Date...">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="EndDate"><b>End Date</b></label>
                <input asp-for="EndDate" type="date" class="form-control" placeholder="End Date...">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="EndDateToJoin"><b>End Date To Join</b></label>
                <input asp-for="EndDateToJoin" type="date" class="form-control" placeholder="End Date To Join...">
                <span asp-validation-for="EndDateToJoin" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group  inline col-sm-12  text-center">
                <label asp-for="Description"><b>Description</b></label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Description...">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="text-center">
            <label asp-for="Level"><b>Level</b></label>
            <div>
                <h5>Easy <input type="radio" asp-for="Level" value="Easy" /></h5>

                <h5>Advanced <input type="radio" asp-for="Level" value="Advanced" /></h5>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Image"></label>
            <input asp-for="@Model.Image" type="file" onchange="readURL(this);" />
            <span asp-validation-for="Image" class="text-danger"></span>
            <img id="blah" src="#" alt="your image" />
        </div>
        <hr class=height: 7px" />
        <div class="text-center">
            <button type="submit" @*class="btn chushka-bg-color text-center"*@>Create Destination</button>
        </div>
    </form>
</main>