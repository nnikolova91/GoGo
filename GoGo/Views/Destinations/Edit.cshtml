@model ViewModels.EditDestinationViewModel

@*@{
    ViewData["Title"] = "Edit";
}*@

<h2>Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Naame" class="control-label"></label>
                <input asp-for="Naame" class="form-control" />
                <span asp-validation-for="Naame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" type="text" class="form-control" rows="6" cols="50" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateToJoin" class="control-label"></label>
                <input asp-for="EndDateToJoin" class="form-control" />
                <span asp-validation-for="EndDateToJoin" class="text-danger"></span>
            </div>
            <div class="text-center">
                <label asp-for="Level"><b>Level</b></label>
                <div>
                    <h5>Easy <input type="radio" asp-for="Level" value="Easy" /></h5>
                    <h5>Advanced <input type="radio" asp-for="Level" value="Advanced" /></h5>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image"></label>
                <input asp-for="@Model.Image" type="file" onchange="readURL(this);" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <img id="blah" src="#" alt="your image" />
            </div>
            <div class="form-group">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                @*<button type="submit" value="Save" asp-action="Edit" asp-controller="Destinations" asp-route-id="@Model.Id" />*@
                <button type="submit" value="Save">Edit destination</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
