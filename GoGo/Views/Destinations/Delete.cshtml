@model ViewModels.DestViewModel

@{
    ViewData["Title"] = "Delete";
}

<div style="text-align:left">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="card" style="width: 30rem;">
        @{var base65 = Convert.ToBase64String(@Model.Image);
            var imgSrcc = String.Format("data:image/gif;base64,{0}", base65); }
        <img class="card-img-top img-thumbnail " src="@imgSrcc">
        <div class="card-body">
            <h5 class="card-title">@Model.Naame</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Start date: </b> @Model.StartDate</li>
            <li class="list-group-item"><b>EndD date: </b>@Model.EndDate</li>
            <li class="list-group-item"><b>End date to join: </b>@Model.EndDateToJoin</li>
            <li class="list-group-item"><b>Level: </b>@Model.Level</li>
        </ul>
        <div class="card-body">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index"></a>
            </form>
        </div>
        <div>
            <form method="get" asp-action="Details" asp-controller="Destinations" asp-route-id="@Model.Id">
                <div>
                    <button class=" btn btn-success">Back to destination</button>
                </div>
            </form>
        </div>
    </div>
</div>
